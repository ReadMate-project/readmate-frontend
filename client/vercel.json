{
  "version": 2,
  "builds": [
    {
      "src": "serverless/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/serverless/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/build/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/build/index.html"
    }
  ]
}
